<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_example_something" model="ir.ui.view">
        <field name="name">example.something.form.view</field>
        <field name="model">example.something</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="student_wizard"/>
                        <field name="student_name"/>
                        <field name="remarks"/>
                    </group>
                    <group>
                        <footer>
                            <button name="action_cancel" string="Save" type="object"
                                    class="btn-primary" data-hotkey="q"/>
                            <button special="cancel" data-hotkey="z" string="Cancel" class="btn-secondary"/>
                        </footer>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_example_something" model="ir.actions.act_window">
        <field name="name">Example Something</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">example.something</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>